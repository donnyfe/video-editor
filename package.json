    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "vue3-moveable": "^0.28.0",
    "wavesurfer.js": "^7.8.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
